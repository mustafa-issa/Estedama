<script>
    $(document).ready(function () {
        var responsiveHelper_datatable_tabletools = undefined;

        



        var checkbox;
        pageSetUp();
        drawBreadCrumb();
        $('#color').on('input', function () {
            checkbox.siblings().css('background-color', $('#color').val());
            checkbox.attr('color', $('#color').val());
        });
        $('[name=pieIds]').change(function () {
            if (!$('#chkPie').is(":checked")) {
                if ($(this).is(":checked")) {
                    checkbox = $(this);
                    $('#color').click();
                }
                else
                    checkbox.siblings().css('background-color', '');
            }
        });
        $('#chkPie').change(function () {
            $('input[name=pieIds]:checked').each(function () {
                $(this).removeAttr('checked');
                $(this).siblings().css('background-color', '');
            });
        });

        $('[name=lineIds]').change(function () {
            if (!$('#chkLine').is(":checked")) {
                if ($(this).is(":checked")) {
                    checkbox = $(this);
                    $('#color').click();
                }
                else
                    checkbox.siblings().css('background-color', '');
            }
        });
        $('#chkLine').change(function () {
            $('input[name=lineIds]:checked').each(function () {
                $(this).removeAttr('checked');
                $(this).siblings().css('background-color', '');
            });
        });

        $('[name=barIds]').change(function () {
            if (!$('#chkBar').is(":checked")) {
                if ($(this).is(":checked")) {
                    checkbox = $(this);
                    $('#color').click();
                }
                else
                    checkbox.siblings().css('background-color', '');
            }
        });
        $('#chkBar').change(function () {
            $('input[name=barIds]:checked').each(function () {
                $(this).removeAttr('checked');
                $(this).siblings().css('background-color', '');
            });
        });

        $('input[name=tableIds]').change(function () {
            checkbox = $(this);
            $('input[name=tableIds]:checked').each(function () {
                $(this).removeAttr('checked');
            });
            checkbox.prop('checked', true);
        });

    });
</script>


